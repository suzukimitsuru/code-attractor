{
  "name": "code-attractor",
  "displayName": "Code Attractor",
  "description": "I wish to make a attracting foce diagram of the relationship between chords",
  "version": "0.0.1",
  "preview": true,
  "publisher": "suzukimitsuru",
  "keywords": [
    "software",
    "visualise",
    "attracting-foce",
    "vscode-extension"
  ],
  "categories": [
    "Visualization"
  ],
  "icon": "media/codeattractor-icon.png",
  "homepage": "https://github.com/suzukimitsuru/vscode-code-attractor",
  "repository": {
    "type": "git",
    "url": "https://github.com/suzukimitsuru/vscode-code-attractor.git"
  },
  "bugs": {
    "url": "https://github.com/suzukimitsuru/vscode-code-attractor/issues"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onWebviewPanel:codeattractor.sidebar"
  ],
  "contributes": {
    "commands": [
      {
        "command": "codeattractor.showEditor",
        "title": "Open Editor",
        "shortTitle": "open",
        "category": "Code Attractor",
        "icon": "media/codeattractor-icon.svg",
        "enablement": "true"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "codeattractor.showEditor",
          "group": "navigation",
          "when": "view == codeattractor.sidebar || view == explorer"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "codeattractor.sidebar",
          "name": "Code Attractor",
          "type": "webview",
          "icon": "media/codeattractor-icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:package": "npm run package && npx vsce package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "engines": {
    "vscode": "^1.81.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "vsce": "^2.15.0",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "xml2js": ">=0.5.0"
  }
}
